{
  "name": "hardhat",
  "version": "1.0.0",
  "description": "Basic Hardhat template to get you started with Solidity and TypeScript",
  "license": "MIT",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "verify:testnet": "hardhat verify --network testnet 0x...",
    "verify:mainnet": "hardhat verify --network mainnet 0x...",
    "node": "hardhat node"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/contracts-upgradeable": "^5.0.1",
    "@openzeppelin/hardhat-upgrades": "^3.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "got": "11.8.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.11.43",
    "typescript": "^5.2.2"
  }
}
